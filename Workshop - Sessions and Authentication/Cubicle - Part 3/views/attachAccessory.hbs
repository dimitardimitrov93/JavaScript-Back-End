<main>
  <h1>Attach a new accessory</h1>
  <div class="form">
    <h2>{{productDetails.name}}</h2>
    <img class="cube" src="{{productDetails.imageUrl}}">
    <form action="/products/{{productDetails._id}}/attach-accessory" method="POST">
      <label for="accessoryId">Accessories</label>
      <select id="accessoryId" name="accessoryId">
        {{#each accessories}}
        <option value="{{_id}}">{{name}}</option>
        {{/each}}
      </select>
      <input type="submit" value="Attach">
    </form>
    <h3 class="italic">This cube has all available accessories so far or there is no available at all...
    </h3>
    <a class="btn" href="/">Back</a>
  </div>
</main>